<project basedir="." default="build" name="avior">
    <property environment="env"/>
    <property name="ECLIPSE_HOME" value="../../../../Downloads/eclipse"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.6"/>
    <property name="source" value="1.6"/>
	
	<condition property="isWindows">
	                    <os family="windows" />
	 </condition>

	 <condition property="isLinux">
	                    <os family="unix" />
	 </condition>
	
	<condition property="isMac">
	  					<os family="mac" />
	</condition>
	
	<patternset id="lib">
	        <include name="bin"/>
	            <include name="lib/commons-codec-1.6.jar"/>
	            <include name="lib/commons-logging-1.1.1.jar"/>
	            <include name="lib/fluent-hc-4.2.jar"/>
	            <include name="lib/httpclient-4.2.jar"/>
	            <include name="lib/httpclient-cache-4.2.jar"/>
	            <include name="lib/httpcore-4.2.jar"/>
	            <include name="lib/httpmime-4.2.jar"/>
	            <include if="isMac" name="lib/swt-3.7.2-cocoa-macosx-x86_64.zip"/>
	            <include name="lib/swt-grouplayout.jar"/>
	            <include if="isLinux" name="lib/org.eclipse.swt.gtk.linux.x86_64_3.7.2.v3740f.jar"/>
	    </patternset>
	
	   <path id="avior.classpath">
	        <fileset dir="${lib}">
	            <patternset refid="lib"/>
	        </fileset>
	    </path>
    <target name="init">
        <mkdir dir="bin"/>
        <copy includeemptydirs="false" todir="bin">
            <fileset dir="src">
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
        <copy includeemptydirs="false" todir="bin">
            <fileset dir="bin">
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
        <copy includeemptydirs="false" todir="bin">
            <fileset dir="lib">
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
    </target>
    <target name="clean">
        <delete dir="bin"/>
    </target>
    <target depends="clean" name="cleanall"/>
    <target depends="build-subprojects,build-project" name="build"/>
    <target name="build-subprojects"/>
    <target depends="init" name="build-project">
    </target>
    <target description="Build all projects which reference this project. Useful to propagate changes." name="build-refprojects"/>
    <target description="copy Eclipse compiler jars to ant lib directory" name="init-eclipse-compiler">
        <copy todir="${ant.library.dir}">
            <fileset dir="${ECLIPSE_HOME}/plugins" includes="org.eclipse.jdt.core_*.jar"/>
        </copy>
        <unzip dest="${ant.library.dir}">
            <patternset includes="jdtCompilerAdapter.jar"/>
            <fileset dir="${ECLIPSE_HOME}/plugins" includes="org.eclipse.jdt.core_*.jar"/>
        </unzip>
    </target>
    <target description="compile project with Eclipse compiler" name="build-eclipse-compiler">
    				<javac
    		       classpathref="avior.classpath" 
    		       debug="true" 
    		       srcdir="src"
    		       destdir="lib"/>
        <antcall target="build"/>
    </target>
    <target name="Avior">
        <java classname="avior.Avior" failonerror="true" fork="yes">
            <classpath refid="avior.classpath"/>
        </java>
    </target>
</project>
